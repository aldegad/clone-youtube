extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", required, name="username" type="text")
        input(placeholder="Password", required, name="password" type="password")
        input(type="submit", value="Login")

    hr
    div 
        span Don't have an account? 
        a(href="/join") Create one now &rarr;