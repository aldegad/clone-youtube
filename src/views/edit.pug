extends base.pug

block content 
    div
        h4 Upload Video
        if errorMessage 
            span=errorMessage
        form(method="POST")
            input(placeholder="Title", value=video.title required, type="text", name="title", minlength="5" maxlength="80")
            input(placeholder="Description", value=video.description required, type="text", name="description", minlength="5", maxlength="500")
            input(placeholder="Hashtags separated by coma.", value=video.hashtags.join() type="text", name="hashtags")
            input(type="submit" value="Save")