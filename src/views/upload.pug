extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Title", required, type="text", name="title", minlength="5" maxlength="80")
        input(placeholder="Description", required, type="text", name="description", minlength="5", maxlength="500")
        input(placeholder="Hashtags separated by coma.", type="text", name="hashtags")
        input(type="submit" value="Upload video")